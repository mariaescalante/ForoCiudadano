---
import Base from "../../layout/Base.astro";
import { supabase } from "../../../public/supabase.js";

const { id } = Astro.params;
let { data: queja } = await supabase.from("Queja").select("*").eq("id", id);

let { data: usuario } = await supabase
  .from("Usuario")
  .select("*")
  .eq("id", queja[0].usuario);

  const { data } = supabase.storage
    .from("imagenes")
    .getPublicUrl(queja[0].imagen);

---

<h2 class="text-teal-800 text-4xl font-bold mb-10 text-center">
  Detalles de la publicación
</h2>
{
  queja &&
    queja.map((queja) => (
      <>
        <div class="flex justify-center">
          <img
            src={data.publicUrl}
            class="w-2/5 object-cover border-4 border-teal-600"
          />
        </div>

        <div class="bg-teal-500 rounded my-4 sm:mx-20 sm:my-10 lg:my-16 py-10 text-center lg:mx-56 mx-5">
          <h2 class="text-teal-950 font-bold text-xl sm:text-3xl mb-4 mx-4 sm:mx-8">
            {queja.titulo}
          </h2>
          <h2 class="text-teal-900 font-bold text-xl my-4 mx-4 sm:mx-8">
            Fecha de publicación: {queja.fecha.substring(0, 10)}
          </h2>

          <p class="text-l sm:text-xl mx-4 sm:mx-20 my-6 text-neutral-100">
            {queja.descripcion}
          </p>

          <div class="bg-teal-200 text-teal-800 rounded px-6 py-2 my-5 mx-4 sm:mx-5 inline-block text-xl">
            Categoría - {queja.categoria}
          </div>

          <div class="bg-teal-200 text-teal-800 rounded px-6 py-2 my-5 mx-4 sm:mx-5 inline-block text-xl">
            Distrito - {queja.distrito}
          </div>

          <h2 class="text-teal-900 font-bold text-xl my-4 mx-4 sm:mx-8">
            Publicado por: {usuario[0].nombre} {usuario[0].apellidos}
          </h2>
        </div>
      </>
    ))
}
