---
import { supabase } from "../../../public/supabase.js";
import Pagination from "./Pagination.astro";

const { email } = Astro.locals;

let { data: usuario, error } = await supabase
  .from("Usuario")
  .select("*")
  .eq("email", email);

let { data: quejas } = await supabase
  .from("Queja")
  .select("*")
  .eq("usuario", usuario && usuario[0]?.id)
  .order("fecha", { ascending: false });

for (let i = 0; i < quejas.length; i++) {
  const { data } = supabase.storage
    .from("imagenes")
    .getPublicUrl(quejas[i].imagen);
  quejas[i].imagen = data.publicUrl;
}

const quejasPorPagina = 8;

const currentPage: number | null = +Astro.url.searchParams.get("page")! || 1;

const totalPaginas: number = Math.ceil(quejas.length / quejasPorPagina);

const quejasPaginadas = quejas?.slice(
  (currentPage - 1) * quejasPorPagina,
  currentPage * quejasPorPagina,
);

---

{
  quejasPaginadas &&
    quejasPaginadas.map((queja) => (
      <div class="flex flex-col md:flex-row text-center md:text-left mb-2 bg-teal-400 rounded-xl my-5 lg:my-10 lg:mx-56 mx-5">
        <div class="flex items-center">
          <img src={queja.imagen} class="w-auto h-4/5 lg:w-96 m-auto" />
        </div>
        <div class="bg-teal-600 rounded-xl flex-1 pb-10">
          <div class="flex justify-between">
            <h2 class="text-teal-950 font-bold text-lg lg:text-xl my-4 mx-8">
              {queja.titulo}
            </h2>
            <h2 class="text-teal-900 font-bold text-l my-4 mx-8">
              {queja.fecha.substring(0, 10)}
            </h2>
          </div>

          <p class="text-am lg:text-l mx-10 text-neutral-100">
            {queja.descripcion}
          </p>
          <div class="bg-teal-400 text-teal-950 px-5 py-2 my-5 mx-5 inline-block">
            {queja.categoria}
          </div>
          <button class="bg-teal-400 px-5 py-2 my-5 mx-5 hover:bg-teal-300 text-teal-950">
            <a href={`/queja/${queja.id}`}>Más información</a>
          </button>
        </div>
      </div>
    ))
}
<Pagination
  currentPage={currentPage}
  totalPages={totalPaginas}
  disablePrevious={currentPage === 1}
  disableNext={currentPage === totalPaginas || totalPaginas === 0}
/>
