---
import { supabase } from "../../lib/supabase";
let { data: quejas } = await supabase
  .from("Queja")
  .select("*")
  .order("fecha", { ascending: false })
  .range(0, 4);

for (let i = 0; i < quejas.length; i++) {
  const { data } = supabase.storage
    .from("imagenes")
    .getPublicUrl(quejas[i].imagen);
  quejas[i].imagen = data.publicUrl;
}
---

<h2 class="text-zinc-300 font-bold my-5 text-center lg:text-3xl text-xl">
  Últimas publicaciones
</h2>
{
  quejas &&
    quejas.map((queja) => (
      <div class="flex flex-col md:flex-row text-center md:text-left mb-2 bg-zinc-800 rounded-xl my-5 lg:my-10 lg:mx-56 mx-5">
        <div class="flex items-center">
          <img src={queja.imagen} class="w-auto lg:w-96 m-auto" />
        </div>
        <div class="bg-zinc-900 rounded-xl flex-1 pb-10">
          <div class="flex justify-between">
            <h2 class="text-teal-500 font-bold text-lg lg:text-xl my-4 mx-8">
              {queja.titulo}
            </h2>
            <h2 class="text-zinc-400 font-bold text-l my-4 mx-8">
              {queja.fecha.substring(0, 10)}
            </h2>
          </div>

          <p class="text-am lg:text-l mx-10">{queja.descripcion}</p>
          <div class="bg-teal-950 text-teal-600 px-5 py-2 my-5 mx-5 inline-block">
            {queja.categoria}
          </div>
          <button class="bg-teal-700 px-5 py-2 my-5 mx-5 hover:bg-teal-600">
            <a href={`/queja/${queja.id}`}>Más información</a>
          </button>
        </div>
      </div>
    ))
}
