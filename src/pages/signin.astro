---
import Base from "../layout/Base.astro";
const title = "Iniciar Sesión";
---

<Base title={title}>
  <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
    <section class="w-full max-w-md">
      <h1
        class="font-semibold text-2xl text-teal-900 dark:text-teal-400 w-full mb-1"
      >
        {title}
      </h1>
      <p class="text-neutral-600 dark:text-zinc-400 text-sm mb-8 w-full">
        ¿Aún no tienes cuenta? <a
          href="/register"
          class="text-teal-600 underline underline-offset-2 font-bold"
          >Crea tu cuenta</a
        >
      </p>
      <form
        action="/api/auth/signin"
        method="post"
        class="grid grid-cols-1 gap-3 w-full"
      >
        <div class="grid grid-cols-1 gap-2">
          <label for="email" class="font-bold text-teal-900 dark:text-teal-400"
            >Email</label
          >
          <input
            id="email"
            type="email"
            name="email"
            class="rounded-md py-1 px-3 border bg-teal-100 dark:bg-zinc-500 border-teal-600"
          />
        </div>
        <label for="password" class="font-bold text-teal-900 dark:text-teal-400"
          >Password</label
        >
        <input
          id="password"
          type="password"
          name="password"
          class="rounded-md py-1 px-3 border bg-teal-100 dark:bg-zinc-500 border-teal-600"
        />
        <button
          type="submit"
          class="py-2 mt-5 bg-teal-300 dark:bg-teal-500 rounded font-semibold hover:bg-teal-200 dark:hover:bg-teal-600 text-teal-950"
          >Iniciar Sesión</button
        >
      </form>
    </section>
  </main>
</Base>
