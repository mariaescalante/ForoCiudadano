---
import Base from "../layout/Base.astro";
---

<Base title="Inicio inválido">
    <div class="flex items-center justify-center">
        <div>
            <img src="/logoQC.png" style="width: 12rem; margin-left:5px;" />
        </div>

        <div class="flex flex-col items-center justify-center mx-2">
            <h1 class="font-bold text-xl lg:text-2xl text-teal-900 dark:text-teal-300 my-5">
                Credenciales incorrectas
            </h1>
            <h2 class="lg:text-xl text-sm dark:text-neutral-100 mx-5">
                El usuario o contraseña introducidos son inválidos.
            </h2>
            <h2 class="lg:text-xl text-sm dark:text-neutral-100 mx-5">
                Inténtelo de nuevo.
            </h2>
            <a
                href="/signin"
                class="py-2 px-5 my-5 bg-teal-300 dark:bg-teal-400 font-semibold hover:bg-teal-200 dark:hover:bg-teal-500 text-teal-950"
                >Iniciar sesión</a
            >
        </div>
    </div>
</Base>
