---
import Base from "../layout/Base.astro";
const title = "Registrarse  ";
---

<Base title={title}>
  <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
    <section class="w-full max-w-md">
      <h1
        class="font-semibold text-2xl dark:text-teal-400 text-teal-900  w-full mb-1"
      >
        {title}
      </h1>
      <p class="text-neutral-600 dark:text-zinc-400 text-sm mb-8 w-full">
        ¿Ya tienes cuenta? <a
          href="/signin"
          class="text-teal-600 underline underline-offset-2 font-bold"
          >Iniciar Sesión</a
        >
      </p>
      <form
        action="/api/auth/register"
        method="post"
        class="grid grid-cols-1 gap-3 w-full"
      >
        <div class="grid grid-cols-1 gap-2">
          <label for="email" class="font-bold text-teal-900 dark:text-teal-400">Email</label>
          <input
            id="email"
            type="email"
            name="email"
            class="rounded-md py-1 px-3 border bg-teal-100 border-teal-600 dark:bg-zinc-500 "
          />
        </div>

        <div class="grid grid-cols-1 gap-2">
          <label for="password" class="font-bold text-teal-900 dark:text-teal-400"
            >Contraseña</label
          >
          <input
            id="password"
            type="password"
            name="password"
            class="rounded-md py-1 px-3 border bg-teal-100 border-teal-600 dark:bg-zinc-500 "
          />
        </div>

        <div class="grid grid-cols-1 gap-2">
          <label for="nombre" class="font-bold text-teal-900 dark:text-teal-400">Nombre</label>
          <input
            id="nombre"
            type="text"
            name="nombre"
            class="rounded-md py-1 px-3 border bg-teal-100 border-teal-600 dark:bg-zinc-500 "
          />
        </div>

        <div class="grid grid-cols-1 gap-2">
          <label for="apellidos" class="font-bold text-teal-900 dark:text-teal-400"
            >Apellidos</label
          >
          <input
            id="apellidos"
            type="text"
            name="apellidos"
            class="rounded-md py-1 px-3 border bg-teal-100 border-teal-600 dark:bg-zinc-500 " 
          />
        </div>

        <div class="grid grid-cols-1 gap-2">
          <label for="telefono" class="font-bold text-teal-900 dark:text-teal-400">Telefono</label>
          <input
            id="telefono"
            type="text"
            name="telefono"
            class="rounded-md py-1 px-3 border bg-teal-100 border-teal-600 dark:bg-zinc-500 "
          />
        </div>

        <button
          type="submit"
          class="py-2 mt-5 bg-teal-300 dark:bg-teal-500 rounded font-semibold hover:bg-teal-200 dark:hover:bg-teal-600 text-teal-950"
          >Registrarse</button
        >
      </form>
    </section>
  </main>
</Base>
