---
import Base from "../layout/Base.astro";
---

<Base title="Inicio">
    <div class="flex items-center justify-center min-h-screen">
        <div>
            <img src="/logoQC.png" style="width: 12rem;" />
        </div>

        <div class="flex flex-col items-center justify-center">
            <h1 class="font-bold text-2xl text-teal-900 dark:text-teal-300">404 Página no encontrada</h1>
            <h2 class="text-xl dark:text-neutral-100">Página no encontrada</h2>
            <p class="text-xl dark:text-neutral-100">Vaya, esta página no existe</p>
        </div>
    </div>
    <div class="flex justify-center">
        <button
            class="bg-teal-300 dark:bg-teal-500 font-semibold px-4 py-2 hover:bg-teal-200 dark:hover:bg-teal-600 text-teal-950 mt-5"
            onclick="window.history.back()">Volver</button
        >
    </div>
</Base>
